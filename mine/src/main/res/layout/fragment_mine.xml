<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:src="@drawable/ic_back_black"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/header_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/header_img"
            app:layout_constraintStart_toStartOf="@+id/header_img"
            app:layout_constraintEnd_toEndOf="@+id/header_img"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="yds"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_77"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="@dimen/dp_16"
            app:cardElevation="@dimen/dp_5"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/collect_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintEnd_toStartOf="@+id/rank_num"
                    app:layout_constraintBottom_toTopOf="@+id/collect_title"
                    app:layout_constraintVertical_chainStyle="packed"
                    />
                <TextView
                    android:id="@+id/collect_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/collect_num"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/collect_num"
                    app:layout_constraintEnd_toEndOf="@+id/collect_num"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textColor="@color/color_35405A"
                    android:text="@string/collect"
                    />
                <TextView
                    android:id="@+id/rank_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/collect_num"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/coin_num"
                    tools:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/rank_title"
                    />
                <TextView
                    android:id="@+id/rank_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/rank_num"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/rank_num"
                    app:layout_constraintEnd_toEndOf="@+id/rank_num"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textColor="@color/color_35405A"
                    android:text="@string/rank"
                    />
                <TextView
                    android:id="@+id/coin_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rank_num"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="3"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintBottom_toTopOf="@+id/coin_title"
                    />
                <TextView
                    android:id="@+id/coin_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/coin_num"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/coin_num"
                    app:layout_constraintEnd_toEndOf="@+id/coin_num"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textColor="@color/color_35405A"
                    android:text="@string/coin"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/bg_radius_32_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="@dimen/dp_5"
            >
            <Button
                android:id="@+id/collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ffc600_shape"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_22"
                android:textSize="@dimen/sp_12"
                android:text="@string/collect"/>
            <Button
                android:id="@+id/collect_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_f5f6f7_shape"
                app:layout_constraintStart_toEndOf="@+id/collect"
                app:layout_constraintTop_toTopOf="@+id/collect"
                app:layout_constraintBottom_toBottomOf="@+id/collect"
                android:layout_marginStart="@dimen/dp_14"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:text="@string/collect"/>
            <FrameLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/collect"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
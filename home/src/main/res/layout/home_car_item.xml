<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        android:shadowRadius="5"
        android:padding="@dimen/dp_16">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_header_img"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/home_header_img"
                app:layout_constraintBottom_toBottomOf="@+id/home_header_img"
                app:layout_constraintStart_toEndOf="@+id/home_header_img"
                tools:text="licesfdsfddfsffdsfdsdfsdfsfdsdfsdfdsdfdsdfsdfsfds"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:maxWidth="@dimen/dp_120"
                />

            <TextView
                android:id="@+id/super_chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/author"
                app:layout_constraintTop_toTopOf="@+id/home_header_img"
                app:layout_constraintBottom_toBottomOf="@+id/home_header_img"
                app:layout_constraintEnd_toStartOf="@+id/chapter_name"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constrainedWidth="true"
                tools:text="ceshi/"
                />
            <TextView
                android:id="@+id/chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/home_header_img"
                app:layout_constraintBottom_toBottomOf="@+id/home_header_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedWidth="true"
                tools:text="ceshiceshiceshiceshiceshi"
                android:maxWidth="@dimen/dp_100"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/home_header_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="标题标题标题"
                android:layout_marginTop="@dimen/dp_8"
                android:textSize="@dimen/sp_16"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>